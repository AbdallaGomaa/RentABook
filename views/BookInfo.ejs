<DOCTYPE html>
<html>
	<head>
        <title><%= book.title %></title>
		<link type="text/css" rel="stylesheet" href="css/bootstrap.css">
		<link type="text/css" rel="stylesheet" href="css/BookInfoStyle.css">
        <link type="text/css" rel="stylesheet" href="css/HomepageStyle.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
		<script src="js/bootstrap.js" type="text/javascript"></script>
	</head>
	
	<body>
        
		<header>
           <% include ./navbars %>
        </header>
        
        <div class="spacer">
		    &nbsp;
		</div>
		<div class="container-fluid">
			<div id="BookT">
				<h2>Book Details</h2>
				<table class="table table-bordered">
					<tbody>
						<tr>
							<td rowspan="8"><img src="<%= book.photolink %>"></td>
							<td>Book Title</td>
							<td><%= book.title %></td>
							<td>Contact Renter</td>
						</tr>
						<tr>
							<td>Author</td>
							<td><%= book.author %></td>
							<td rowspan="7">
								 <form class="form-horizontal" role="form" action="/sendMessage" method="POST">
									<input type="hidden" class="form-control" id="to" name="to" value= "<%=book.user %>" placeholder="<%=book.user %>">
									<textarea rows="10" cols="50" id="message" name="message" placeholder="Enter message here...."></textarea>
									&nbsp;
									<button type="submit" class="btn btn-default">
										<span class="glyphicon glyphicon-envelope"></span>Send Message
				  					</button>
				  					<br>
				  					<br>
				  					<h4>OR</h4>
				  					<h3>Call/Text: (123) 456-7890</h3>
								</form>
							</td>	
						</tr>
						<tr>
							<td>Genres</td>
							<td><%= book.genre %></td>
						</tr>
						<tr>
							<td>Language</td>
							<td><%= book.language %></td>
						</tr>
						<tr>
							<td>Publisher</td>
							<td><%= book.publisher %></td>
						</tr>
						<tr>
							<td>Price</td>
							<td>$<%= book.price %></td>
						</tr>
						<tr>
							<td>Renter</td>
                            <td><a id="username" href="/user?username=<%=book.user %>"><%=book.user %></a></td>
						</tr>
						<tr>
							<td>Description</td>
							<td>This book is in mint condition. I am willing to rent it for a maximum of one month</td>
						</tr>
                        <tr>
                            <td colspan="4">
                                
                            <% for(var i=0; i<recommendedBooks.length; i++) {%>
                              <div class="col-md-2">
                                <div class="thumbnail">
                                  <img src="<%= recommendedBooks[i].photolink %>" width="100" height="100">
                                  <div class="caption">
                                    <h4><%= recommendedBooks[i].title %></h4>
                                    <p><%= recommendedBooks[i].genre %></p>
                                    <p><a href="BookInfo.html" class="btn btn-primary" role="button">Rent</a> <a href="/bookInfo?book=<%= recommendedBooks[i].id %>" class="btn btn-default" role="button">View</a></p>
                                  </div>
                                </div>
                            </div>
                          <% } %>
                                                        
                            </td>
                            
                        </tr>
					</tbody>
				</table>
			</div>
		</div>
	</body>
</html>