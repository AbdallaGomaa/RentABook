<!DOCTYPE html>
<html>
    <head>
        <link type="text/css" rel="stylesheet" href="css/bootstrap.css">
		<link href="css/signup.css" rel="stylesheet">
        <link href="css/HomepageStyle.css" rel="stylesheet">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    </head>
    
    <body>
        <header>
           <% include js/navbars %>
        </header>
       
         <div class="spacer">
		    &nbsp;
		</div>
       
    <div class="container">
        <h2> Change User password </h2>
        <form class="form-horizontal" role="form" action="/changePass" method="POST">
          <div class="form-group">
            <label class="control-label col-sm-2" for="username">Username</label>
            <div class="col-sm-10"> 
              <input type="text" class="form-control" name="username" placeholder="Enter a username">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="password">New Password</label>
            <div class="col-sm-10"> 
              <input type="password" class="form-control" name="password" placeholder="Enter New Password">
            </div>
          </div>
          <br>
          <div class="form-group"> 
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Change Password</button>
            </div>
          </div>
       </form> 
    </div> 
       
       <div class="spacer">
		    &nbsp;
		</div>
       
    <div class="container">
        <h2> Change User Info </h2>
        <form class="form-horizontal" role="form" action="/changeInfo" method="POST">
          <div class="form-group">
            <label class="control-label col-sm-2" for="username">Username</label>
            <div class="col-sm-10"> 
              <input type="text" class="form-control" name="username" placeholder="Enter a username">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="password">Info to be Changed</label>
            <div class="col-sm-10"> 
              <input type="text" class="form-control" name="infoChange" placeholder="Enter Info to be Changed">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-2" for="password">Change To</label>
            <div class="col-sm-10"> 
              <input type="text" class="form-control" name="change" placeholder="Change To ...">
            </div>
          </div>
          <br>
          <div class="form-group"> 
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Change Detail</button>
            </div>
          </div>
       </form> 
    </div>  
       
        <div class="spacer">
		    &nbsp;
		</div>
       
    <div class="container">
        <h2> Delete User </h2>
        <form class="form-horizontal" role="form" action="/deleteUser" method="POST">
          <div class="form-group">
            <label class="control-label col-sm-2" for="username">Username</label>
            <div class="col-sm-10"> 
              <input type="text" class="form-control" name="username" placeholder="Enter a username">
            </div>
          <br>
          <br>
          <div class="form-group"> 
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn btn-default">Delete User</button>
            </div>
          </div>
       </form> 
    </div>  
        
    </body>
</html>