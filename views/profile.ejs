                    <form class="form-horizontal" role="form" action="/addbook" method="POST" enctype="multipart/form-data" id="bookfrom">
                              <div class="form-group">
                                <label class="control-label col-sm-2" for="booktitle">Book Title</label>
                                <div class="col-sm-10">
                                  <input type="text" class="form-control" id="booktitle" name="booktitle" placeholder="Enter the book title">
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="control-label col-sm-2" for="bookauthor">Book Author</label>
