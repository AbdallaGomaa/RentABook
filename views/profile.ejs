                <div id="book" class="tab-pane fade">
		    		<h3>Add Book</h3>
                    
                    <form class="form-horizontal" role="form" action="/addbook" method="POST" enctype="multipart/form-data" id="bookfrom">
                              <div class="form-group">
                                <label class="control-label col-sm-2" for="booktitle">Book Title</label>
                                <div class="col-sm-10">
                                  <input type="text" class="form-control" id="booktitle" name="booktitle" placeholder="Enter the book title">
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="control-label col-sm-2" for="bookauthor">Book Author</label>
                                <div class="col-sm-10"> 
                                  <input type="text" class="form-control" id="bookauthor" name="bookauthor" placeholder="Enter the book's author" required>
                                </div>
                              </div>
                               <div class="form-group">
                                <label class="control-label col-sm-2" for="bookcost">Book Cost</label>
                                <div class="col-sm-10"> 
                                  <input type="text" class="form-control" id="bookcost" name="bookcost" placeholder="Enter the book's cost" required>
                                </div>
                              </div>
                               <div class="form-group">
                                <label class="control-label col-sm-2" for="language">Book Language</label>
                                <div class="col-sm-10"> 
                                  <input type="text" class="form-control" id="language" name="language" placeholder="Enter the book's language" required>
                                </div>
                              </div>
                               <div class="form-group">
                                <label class="control-label col-sm-2" for="publisher">Book Publisher</label>
                                <div class="col-sm-10"> 
                                  <input type="text" class="form-control" id="publisher" name="publisher" placeholder="Enter the book's publisher" required>
                                </div>
                              </div>

                               <div class="form-group">
                                <label class="control-label col-sm-2" for="genre">Genre</label>
                                <div class="col-sm-10"> 
                                <input list="genres" class="form-control" id="genre" name="genre" placeholder="Choose the genre" required>                                   <datalist id="genres">

                                          <option value="Action">Action</option>
                                          <option value="Comedy">Comedy</option>
                                          <option value="Fantasy">Fantasy</option>
                                          <option value="Fiction">Fiction</option>
                                          <option value="Mystery">Mystery</option>
                                          <option value="Romance">Romance</option>
                                          <option value="Scifi">Science Fiction</option>
                                          <option value="Thriller">Thriller</option>
                                   </datalist>                                

                                    </div>                                  
                                </div>
                        
                              <div class="form-group">
                                    <label class="control-label col-sm-2" for="mypic">Cover Photo</label>
                                <div class="col-sm-10"> 
                                    <input type="file" class="form-control" id="mypic" name="mypic" placeholder="Upload your pic">
                                </div>
                              </div>
                              <div class="form-group"> 
                               <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-default">Submit</button>
                                </div>
                              </div>

                    </form>
                 
				</div>
				
				<div id="sMessage" class="tab-pane fade">
		    		<h3>Send Message</h3>
						
                    
                    <form class="form-horizontal" role="form" action="/sendMessage" method="POST">
                              <div class="form-group">
                                <label class="control-label col-sm-2" for="to">To</label>
                                <div class="col-sm-10">
                                  <input type="text" class="form-control" id="to" name="to" placeholder="Enter username you would like to send to">
                                </div>
                              </div>
                              <div class="form-group">
                                <label class="control-label col-sm-2" for="message">Message</label>
                                <div class="col-sm-10"> 
                                  <input type="text" class="form-control" id="message" name="message" placeholder="Enter the message">
                                </div>
                              </div>
                              <div class="form-group"> 
                               <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-default">Submit</button>
                                </div>
                              </div>

                    </form>
                 
