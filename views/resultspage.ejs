<!DOCTYPE html>
<html>
    <head>
        <title>Results</title>
		<link type="text/css" rel="stylesheet" href="css/bootstrap.css">
		<link type="text/css" rel="stylesheet" href="css/resultspage.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
		<script src="js/bootstrap.js" type="text/javascript"></script>
    </head>
    
    <body>
		<header>
           <% include ./navbars %>
        </header>

        <div class="spacer">
		    &nbsp;
		</div>
        <% if(genre==false){ %>
            <div class="well well-sm">Page 1 of <%=pages%> for "<%= search %>" Results</div>
        <% }else { %>
            <div class="well well-sm">Page 1 of 1 for "<%= genreN %>" Results</div>
        <% } %>
        <div class="row">
                <% if(genre==false){ %>
                <div class="sidebar col-md-1">
                   <ul id="verticalNav" class="nav nav-pills nav-stacked " >
                        <li <%if(catv=='all'){%>class="active"<%}%>><a href="/search?cat=all&name=<%= search %>">All</a></li>
                        <% for(var i=0; i<cat.length; i++) {%>
                            <li <%if(catv==cat[i]){%>class="active"<%}%>><a href="/search?cat=<%= cat[i] %>&name=<%= search %>"><%= cat[i] %></a></li> 
                        <% } %> 
				   </ul> 
                </div>
                <% } %>
            <div class="col-md-9">
                <div class="center">
                    <div class="list-group" id="swag">
                        <% for(var i=0; i<books.length; i++) {%>
                            <a href="/bookInfo?book=<%= books[i].id %>" class="list-group-item"> 
                                <div class = "book"> 
                                    <img src="<%= books[i].photolink %>" class="img-rounded" alt="Cinque Terre" width="200" height="300">
                                    <p3>Author: <%= books[i].author %></p3>
                                </div>
                            </a> 
                        <% } %>
                                
                    </div>
                </div>
                <%if(parseInt(page)>1){%>
                <button class="btn" id="prev" onclick="window.location.href='/search?page=<%=(parseInt(page)-1)%>&name=<%=search%>'">Prev</button>
                <%}%>
                <button class="btn" id="next" onclick="window.location.href='/search?page=<%=(parseInt(page)+1)%>&name=<%=search%>'">Next</button>
            </div>
        </div>


    </body>
</html>